<p id="notice"><%= notice %></p>

<h1>Customers</h1>

<%= button_to 'New Customer', new_customer_path, method: :get, class: 'btn btn-success mb-5' %>

<div class="row">
  <div class="col-4">
    <h2>Ecoloopers</h2>
    <ul class="list-group">
      <% @customers.where(kind: :ecolooper).each do |customer| %>
        <%= link_to customer_paper_collections_path(customer) do %>
          <li class="list-group-item"><%= customer.name %></li>
        <% end %>
      <% end %>
    </ul>
  </div>
  <div class="col-4">
    <h2>Offsetters</h2>
    <ul class="list-group">
      <% @customers.where(kind: :offsetter).each do |customer| %>
      <%= link_to customer_paper_collections_path(customer) do %>
        <li class="list-group-item"><%= customer.name %></li>
      <% end %>      <% end %>
    </ul>
  </div>
  <div class="col-4">
    <h2>Buyers</h2>
    <ul class="list-group">
      <% @customers.where(kind: :buyer).each do |customer| %>
      <%= link_to customer_paper_collections_path(customer) do %>
        <li class="list-group-item"><%= customer.name %></li>
      <% end %>
    <% end %>
    </ul>
  </div>
</div>

<br>
