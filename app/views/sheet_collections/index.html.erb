<h1><%= @customer.name.titleize %></h1>

<h3>Total Stock</h3>
<table>
  <thead>

  </thead>
  <tbody>
    <% @customer.sheets.each do |sheet| %>
    <tr>
      <td style="width: 200px"><%= render_paper_type(sheet.paper_type) %></td>
      <td><%= sheet.quantity_in_stock %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<h3>Sheet Collections</h3>
<% @customer.sheet_collections.each do |collection| %>
  <h4>Collection on <%= collection.date_collected.to_date %></h4>
  <table>
    <tbody>
      <% collection.sheet_collection_items.each do |item| %>
      <tr>
        <td style="width: 200px"><%= render_paper_type(item.sheet.paper_type) %></td>
        <td><%= item.quantity_collected %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br/>
<% end %>
