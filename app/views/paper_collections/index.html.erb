<h1><%= @customer.name.titleize %></h1>

<h3>Total Stock</h3>
<div class="row">
  <div class="col">

  <table>
    <thead>

    </thead>
    <tbody>
      <% @customer.sheets.each do |sheet| %>
      <tr>
        <td style="width: 200px"><%= sheet.paper_type.label %></td>
        <td><%= sheet.quantity_in_stock %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  </div>
</div>

<div class="row mt-5 mb-3">
  <div class="col">
    <h3>Paper Collections</h3>
    <%= button_to 'Add Collection', new_customer_paper_collection_path, method: :get, class: 'btn btn-success mt-3' %>
  </div>
</div>
<div class="row">

  <% @customer.paper_collections.each do |collection| %>
  <div class="col-4 mt-3">

  <h4><%= collection.date_collected.strftime('%d %B %Y') %></h4>
  <table>
    <tbody>
      <% collection.paper_collection_items.each do |item| %>
      <tr>
        <td style="width: 200px"><%= item.sheet.paper_type.label %></td>
        <td><%= item.quantity_collected %></td>
      </tr>
      <% end %>
    </tbody>
  </table>
  <br/>
  </div>
  <% end %>
</div>
