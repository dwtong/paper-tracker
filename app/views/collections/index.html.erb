<h1><%= @customer.name.titleize %></h1>

<h3>Total Stock</h3>
<div class="row">
  <div class="col-6">
  <%= render 'collections/quantity_in_stock' %>
  </div>
</div>

<div class="row mt-5 mb-3">
  <div class="col">
    <h3>Box Collections</h3>
  </div>
  <div class="float-right">
    <%= link_to 'New Box Collection', new_customer_collection_path, method: :get, class: 'btn btn-success' %>
  </div>
</div>

<div class="row">
  <div class="col">
    <table class="table">
      <thead>
        <th>Date</th>
        <th>Type</th>
        <% PaperType.all.order(:size, :name).each do |type| %>
        <th><%= type.label %></th>
        <% end %>
      </thead>
      <tbody>
        <% @customer.collections.each do |collection| %>
        <tr>
          <td><%= collection.collected_on.strftime('%d %B %Y') %></td>
          <td><%= collection.paper_transactions.first.ecoloop_stock? ? 'Ecoloop' : 'Offset' %></td>
          <% PaperType.all.order(:size, :name).each do |paper_type| %>
              <td><%= collection_quantity_from_type(collection, paper_type) %></td>
          <% end %>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
